<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.js"></script>
    @RenderSection("Styles", false)
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 0.90em;
            background-color: #f8f9fa;
        }

        .nav-pills .nav-link {
            border-radius: 0;
        }

        .nav-pills .nav-link.active {
            background-color: #28a745;
        }

        .container.my-3 {
            background-color: #ffffff;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        footer {
            margin-top: 20px;
            padding: 10px 0;
            background-color: #343a40;
            color: #ffffff;
        }

        footer p {
            margin: 0;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }
    </style>
    <script>
        function LoadData(skillId = null) {
            var skillContainer = $("#skillContainer");
            $.ajax({
                url: "/Candidates/AddNewSkills/" + (skillId ?? ""),
                type: "GET",
                success: function (data) {
                    skillContainer.append(data);
                }
            });
        }

        $(document).on("click", "#btnPlus", function (e) {
            e.preventDefault();
            LoadData();
        });

        $(document).on("click", "#deleteSkill", function (e) {
            e.preventDefault();
            $(this).parent().parent().remove();
        });
    </script>
</head>
<body>
    <div class="container my-3">
        <nav class="nav nav-pills bg-success">
            <a asp-action="Index" asp-controller="Home" class="nav-link active">Home</a>
            <a asp-action="Index" asp-controller="Skills" class="nav-link text-light">Skills</a>
            <a asp-action="Index" asp-controller="Candidates" class="nav-link text-light">Candidates</a>
            <a asp-action="Aggrigate" asp-controller="Home" class="nav-link text-light">Aggrigate</a>
        </nav>
    </div>
    <div class="container">
        @RenderBody()
    </div>
    <footer class="container text-center">
        <p>&copy; @DateTime.Now.Year - <a href="https://www.candidate-skill.org" class="text-white">www.candidate-skill.org</a></p>
    </footer>
    <environment include="Development, Production">
        <script src="~/lib/jquery/jquery.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.bundle.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    </environment>
    @RenderSection("Scripts", false)
</body>
</html>






