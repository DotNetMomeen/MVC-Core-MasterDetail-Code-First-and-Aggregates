@model Candidate_Skill_MVC_CORE_MasterDetails.Models.Skill

@{
    ViewData["Title"] = "Edit Skill";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h4>Edit Skill</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <input type="hidden" asp-for="SkillId" />

                        <div class="form-group mb-3">
                            <label asp-for="SkillName" class="form-label">Skill Name</label>
                            <input asp-for="SkillName" class="form-control" placeholder="Enter skill name" />
                            <span asp-validation-for="SkillName" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-block">Save Changes</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fa fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>










