@model Candidate_Skill_MVC_CORE_MasterDetails.Models.Skill

@{
    ViewData["Title"] = "Skill";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white text-center">
                    <h4>Delete Skill</h4>
                </div>
                <div class="card-body">
                    <h5 class="text-center text-danger mb-4">Are you sure you want to delete this skill?</h5>
                    <dl class="row">
                        <dt class="col-sm-4 text-end">
                            @Html.DisplayNameFor(model => model.SkillName)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.SkillName)
                        </dd>
                    </dl>
                </div>
                <div class="card-footer text-center">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="SkillId" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-trash"></i> Delete
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fa fa-arrow-left"></i> Back to List
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>






