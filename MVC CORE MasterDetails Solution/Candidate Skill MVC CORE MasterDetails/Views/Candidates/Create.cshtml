@model Candidate_Skill_MVC_CORE_MasterDetails.Models.ViewModels.CandidateVM

@{
    ViewData["Title"] = "Create Candidate";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card shadow-sm">

                <div class="card-header bg-primary text-white text-center">
                    <h4>Create New Candidate</h4>
                </div>

                <div class="card-body">
                    <form asp-action="Create" enctype="multipart/form-data" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row d-flex justify-content-between">
                            <!-- Candidate Information Section -->
                            <div class="col-md-6">

                                <h5 class="mb-3 text-center">Candidate Information</h5>

                                <div class="form-group mb-3">
                                    <label asp-for="CandidateName" class="form-label">Name</label>
                                    <input asp-for="CandidateName" class="form-control" placeholder="Enter candidate name" />
                                    <span asp-validation-for="CandidateName" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="DateOfBirth" class="form-label">Date of Birth</label>
                                    <input asp-for="DateOfBirth" class="form-control" type="date" />
                                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="Phone" class="form-label">Phone</label>
                                    <input asp-for="Phone" class="form-control" placeholder="Enter phone number" />
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="ImagePath" class="form-label">Profile Picture</label>
                                    <input asp-for="ImagePath" class="form-control" type="file" />
                                    <span asp-validation-for="ImagePath" class="text-danger"></span>
                                </div>
                                <div class="form-group form-check mb-3">
                                    <input class="form-check-input" asp-for="Fresher" />
                                    <label class="form-check-label" asp-for="Fresher">@Html.DisplayNameFor(model => model.Fresher)</label>
                                </div>
                            </div>

                            <!-- Skills Section -->
                            <div class="col-md-6">
                                <h5 class="mb-3 text-center">Skills Information</h5>
                                <div class="d-flex justify-content-end  mb-3">
                                    <button id="btnPlus" type="button" class="btn btn-outline-primary btn-sm me-0">
                                        <i class="fa fa-plus"></i> Add More
                                    </button>
                                </div>
                                <div id="skillContainer">
                                    <!-- Skills will be dynamically added here -->
                                    <script>
                                        LoadData();
                                    </script>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-block">Save</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fa fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>






