@model Candidate_Skill_MVC_CORE_MasterDetails.Models.ViewModels.CandidateVM

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-12">

                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white text-center">
                        <h4>Edit Candidate</h4>
                    </div>
                  
                    <div class="card-body">
                        <form asp-action="Edit" enctype="multipart/form-data" method="post">
                            <input asp-for="CandidateId" type="hidden" />
                            <input asp-for="Image" type="hidden" />

                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <div class="d-flex justify-content-between">
                            <div class="col-md-6">
                                <!-- Candidate Name -->
                                <div class="form-group mb-3">
                                    <label asp-for="CandidateName" class="form-label">Candidate Name</label>
                                    <input asp-for="CandidateName" class="form-control" placeholder="Enter candidate name" />
                                    <span asp-validation-for="CandidateName" class="text-danger"></span>
                                </div>

                                <!-- Date of Birth -->
                                <div class="form-group mb-3">
                                    <label asp-for="DateOfBirth" class="form-label">Date of Birth</label>
                                    <input asp-for="DateOfBirth" class="form-control" type="date" />
                                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                </div>

                                <!-- Phone -->
                                <div class="form-group mb-3">
                                    <label asp-for="Phone" class="form-label">Phone Number</label>
                                    <input asp-for="Phone" class="form-control" placeholder="Enter phone number" />
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>

                                <!-- Image Upload -->
                                <div class="form-group mb-3">
                                    <label asp-for="ImagePath" class="form-label">Profile Image</label>
                                    <input asp-for="ImagePath" class="form-control" type="file" />
                                    <img src="@Model.Image" width="50" class="rounded-circle mt-2" />
                                    <span asp-validation-for="ImagePath" class="text-danger"></span>
                                </div>

                                <!-- Fresher Status -->
                                <div class="form-check mb-3">
                                    <input class="form-check-input" asp-for="Fresher" />
                                    <label asp-for="Fresher" class="form-check-label">Fresher</label>
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="card shadow-sm">
                                    <div class="card-header bg-primary text-white text-center">
                                        <h4>Add Skills</h4>
                                    </div>
                                    <div class="card-body">
                                        <div class="d-flex justify-content-end">
                                            <a id="btnPlus" class="btn btn-primary btn-sm mb-2">Add More</a>
                                        </div>
                                        <div id="skillContainer">
                                            @foreach (var item in Model.SkillList)
                                            {
                                                <script>
                                                    LoadData(@item);
                                                </script>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-block">Update</button>
                            </div>
                        </form>
                    </div>

                    <div class="card-footer text-center">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fa fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>

            
        </div>
    </div>
</div>













